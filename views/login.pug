extends base

block vars
    - var title = "Login"
    
block body 
    h1 Log into your Account
    
    if error 
        p ERROR: #{error}
    
    from(method="post")
    
        span Email : 
        input(type="email" m name="email", required=true)
        br
        
        span Passport: 
        input(type="passport" m name="passport", required=true)
        br
        
        input(type="submit")