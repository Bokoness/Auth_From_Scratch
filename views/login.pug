extends base

block vars
    - var title = "Login"
    
block body 
    h1 Log into your Account
    
    if error 
        p ERROR: #{error}
    
    form(method="POST" action="/login")
    
        span Email : 
        input(type="email" name="email", required=true)
        br
        
        span Password: 
        input(type="password" name="password", required=true)
        br
        
        input(type="submit")